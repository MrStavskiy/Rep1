package org.example;
import java.util.ArrayList;
import java.util.List;
import java.util.Random;
import java.util.Scanner;

class Televizor {
        //Поля класса
        private String марка;
        private int размерЭкрана;
        private boolean смартТВ;

        //Конструктор класса
    public Televizor(String марка, int размерЭкрана, boolean смартТВ) {
        this.марка = марка;
        this.размерЭкрана = размерЭкрана;
        this.смартТВ = смартТВ;
    }

    //Метод ввода информации
    public void вывестиИнформацию () {
        System.out.println("Марка: " + марка);
        System.out.println("Размер экрана: " +размерЭкрана + " дюймов");
        System.out.println("Смарт ТВ: " +(смартТВ ? "Да" : "Нет"));
        System.out.println();
    }
}

class App{
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        Random random = new Random();

        List <Televizor> телевизоры = new ArrayList<>();

        //ввод количества
        System.out.println("Введите количество телевизоров: ");
        int количество = scanner.nextInt();

        for (int i = 0; i < количество; i++) {
            // Выбор между вводом с клавиатуры и случайным значением
            System.out.println("Введите параметры для телевизора " + (i + 1) + ":");
            System.out.print("Марка (или нажать Enter для случайной): ");
            scanner.nextLine();
            String марка = scanner.nextLine();
            if (марка.isEmpty()){
                марка = "Марка" + (i + 1); //генерация случайной
            }
            int размерЭкрана = random.nextInt(50) + 20; //экран от 20 до 69 дюймов

            boolean смартТВ = random.nextBoolean(); //Случайный выбор

            //Создание экземпляра класса Televizor
            Televizor телевизор = new Televizor(марка,размерЭкрана, смартТВ);
            телевизоры.add(телевизор);
            }
        System.out.println("\nИнформация о телевизорах");
        for (Televizor телевизор : телевизоры) {
            телевизор.вывестиИнформацию();
        }

        scanner.close();
        }
}

